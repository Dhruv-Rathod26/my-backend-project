<% layout('layout/boilerplate') -%>


<style>
  .textinfo{
    display: none;
  
  }
  .form-check {
  border: 1px solid black;
    display: inline;
    padding: 1rem;
    padding-left: 3.5rem;
    border-radius:15px;
  }
  .search-btn{
   background-color: #fe424d;
   border-radius: 15px;
  }
.search-field{
  border-radius: 15px;
}
.meg{
  font-size: 1.5rem;
  text-align: center;
  padding-left: 1rem;

}

</style>
<body>
    <div class="container">


<div class="d-flex justify-content-between align-items-center mt-3 mb-2">

  <h3 class="m-0">All the list</h3>

  <!-- <form class="d-flex mx-3" action="/listing" method="GET">
    <input class="form-control me-2 search-field" type="search" placeholder="Search" name="search" aria-label="Search">
    <button class="btn search-btn" type="submit" ><i class="fa-brands fa-searchengin meg"></i></button>
  </form> -->


  <div class="form-check form-switch form-check-reverse">
    <input class="form-check-input" type="checkbox" id="switchCheckReverse">
    <label class="form-check-label" for="switchCheckReverse">Display Total after Taxes</label>
  </div>
</div>

  
    <div class="row row-cols-lg-4   row-cols-md-2   row-cols-sm-1 ">
      

   <% for(let list of alllist){  %>

    <a href="/listing/<%= list._id %>" class="link">
  <div class="card col listing-card" style="width: auto;">

  <img src="<%=list.image.url%>"class="card-img-top" alt="listing-img"  style="height: 18rem;">
  <div class="card-img-overlay"></div>

  <div class="card-body">
    <p class="card-text"> <%= list.title %></p>    <p class="card-text"> &#8377 <%= list.price.toLocaleString("en-IN")%> /night  <i class="textinfo">+18% GST</i>
       
    </p>

  </div>

</div>
  </a>
 <%  }   %>

    </div>
</div>
    <script>
          let taxswitch = document.getElementById("switchCheckReverse");
          taxswitch.addEventListener("click",()=>{
           let textin = document.getElementsByClassName("textinfo");
              for(let text of textin){
                 if( text.style.display != "inline"){
                    text.style.display = "inline";
                 }else{
                 text.style.display = "none";
              }
       
              }

          })

    </script>

</body>

